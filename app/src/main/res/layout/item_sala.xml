<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    android:layout_margin="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- Imagem (mantida, mas pode remover se não quiseres) -->
        <ImageView
            android:id="@+id/img_sala"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:scaleType="centerCrop"
            android:src="@android:drawable/ic_menu_gallery" />

        <!-- Nome da sala -->
        <TextView
            android:id="@+id/tv_nome_sala"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="12dp"
            android:text="Sala de Reunião Beta" />

        <!-- Capacidade -->
        <TextView
            android:id="@+id/tv_capacidade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="#555555"
            android:paddingTop="4dp"
            android:text="Até 6 pessoas" />

        <!-- Botões VERTICAIS (um em cima do outro) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="16dp">

            <Button
                android:id="@+id/btn_por_hora"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Por Hora"
                android:backgroundTint="#2196F3"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_diaria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diária R$ 32"
                android:backgroundTint="#4CAF50"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btn_mensal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mensal R$ 225"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>